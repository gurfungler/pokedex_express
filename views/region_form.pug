extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of region' name='name' required='true' value=(undefined===region ? '' : region.name) )
      div.form-group
      label(for='generation') Generation:
      input#generation.form-control(type='text', placeholder='Generation' name='generation' value=(undefined===region ? '' : region.generation) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
