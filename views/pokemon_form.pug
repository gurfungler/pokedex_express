extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#pokemon.form-control(type='text', placeholder='Name of pokemon' name='name' required='true' value=(undefined===pokemon ? '' : pokemon.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Description' name='description' required='true') #{undefined===pokemon ? '' : pokemon.description}
    div.form-group
      label(for='number') Number:
      input#number.form-control(type='text', placeholder='Number' name='number' value=(undefined===pokemon ? '' : pokemon.number) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg